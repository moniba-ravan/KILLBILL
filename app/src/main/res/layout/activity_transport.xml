<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mehraneh.KillBill.TransportActivity"
    android:orientation="vertical"
    android:background="@mipmap/blue">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:layout_width="fill_parent"
            style="@style/ComponentFonts"
            android:layout_height="50dp"
            android:textColor="#123897"
            android:text="حمل و نقل عمومی "



            />

        <EditText
            android:id="@+id/general"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:hint="تومان"
            android:inputType="number" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/car"
            style="@style/ComponentFonts"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="وسیله ی نقلیه شخصی \n بنزین و..."
            android:textColor="#123897"


            />


        <EditText
            android:id="@+id/personal"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:hint="تومان"
            android:inputType="number" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/submittra"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#c6779eca"
            android:text="ثبت" />


    </RelativeLayout>


</LinearLayout>
