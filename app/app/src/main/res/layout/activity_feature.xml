<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_feature"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/Background"

    tools:context="com.example.mehraneh.KillBill.FeatureActivity">

    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="257dp"
        android:layout_height="103dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:background="#9bd1d5"
        android:text="درج مخارج روز"
        android:textSize="20sp" />


    Button
        android:id="@+id/btnpast"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="157dp"
        android:background="#dda15b"
        android:text="تصحیح مخارج گذشته" />

    <Button
        android:id="@+id/btnlogout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:background="#ddd58b"
        android:textSize="15sp"
        android:text="خروج" />

    <Button
        android:id="@+id/aboutus"
        android:layout_width="190dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="214dp"
        android:background="#76ae82"
        android:text="درباره ی ما"
        android:textColor="#000000"
        android:textSize="15sp" />


</RelativeLayout>
