<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@mipmap/un1"


    tools:context="com.example.mehraneh.KillBill.FirstActivity">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="59dp"
        android:text="ورود کاربران"
        android:textColor="#986b44"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/welcome"
        android:layout_gravity="center"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@+id/btnregister"
        android:layout_toStartOf="@+id/btnregister"
        android:background="#c0bacdde"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColor="#111111"
        android:textColorHint="#a6a1a1" />
    <TextView
        android:id="@+id/textusername"
        android:text="نام کاربری"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/username"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"
        android:layout_above="@+id/password"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#986b44"
        />

    <TextView
        android:text="کلمه عبور"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textpassword"
        android:layout_alignBottom="@+id/password"
        android:layout_alignRight="@+id/textusername"
        android:textColor="#986b44"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username"
        android:layout_below="@+id/username"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="#babacdde"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#111111"
        android:textColorHint="#a6a1a1" />

    <TextView
        android:id="@+id/boxsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_below="@+id/password"
        android:text=" " />

    <TextView
        android:id="@+id/textForget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/textusername"
        android:layout_alignRight="@+id/textusername"
        android:layout_below="@+id/boxsave"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="در صورت فراموشی رمز به ما ایمیل بزنید"
        android:textColor="#686e5317" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_below="@+id/textForget"
        android:layout_marginTop="20dp"
        android:background="#a5f4a15d"
        android:text="ورود"
        android:textColor="#331212" />

    <TextView
        android:id="@+id/textAbout0"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/textusername"
        android:layout_alignRight="@+id/textusername"
        android:layout_below="@+id/btnlogin"
        android:layout_marginTop="10dp"
        android:text="در صورت بروز مشکل با ما درمیون بگذارید!"
        android:textColor="#986b44" />
    <TextView
        android:id="@+id/textAbout"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/textAbout0"
        android:layout_alignRight="@+id/textAbout0"
        android:layout_below="@+id/textAbout0"
        android:text="        با تشکر از حمایت و همراهی صمیمانه ی شما"
        android:textColor="#986b44" />
    <Button
        android:text="ثبت نام"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnregister"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_below="@id/textsign"
        android:layout_marginTop="60dp"
        android:textColor="#211919"
        android:background="#b9cf91"
        />

    <TextView
        android:id="@+id/textemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textAbout"
        android:layout_marginLeft="40dp"
        android:text="Email: killbillapplication@gmail.com"
        android:textColor="#7b5534" />

    <TextView
        android:id="@+id/textsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textemail"
        android:layout_marginRight="38dp"
        android:layout_toRightOf="@id/btnlogin"
        android:text="نوشته شده توسط گروه KillBill"
        android:textColor="#4a2e15" />

</RelativeLayout>
