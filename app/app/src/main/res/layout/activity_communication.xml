<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mehraneh.KillBill.CommunicationActivity"
    android:orientation="vertical"
    android:background="@mipmap/pink2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:layout_width="fill_parent"
            style="@style/ComponentFonts"
            android:layout_height="50dp"
            android:text="هزینه اینترنت"



            />

        <EditText
            android:id="@+id/internet"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:hint="تومان"
            android:inputType="number" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:layout_width="fill_parent"
            style="@style/ComponentFonts"
            android:layout_height="50dp"
            android:text="قبض موبایل"



            />

        <EditText
            android:id="@+id/mobile"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:hint="تومان"
            android:inputType="number" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            style="@style/ComponentFonts"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="قبض تلفن"


            />

        <EditText
            android:id="@+id/phone"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:hint="تومان"
            android:inputType="number" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/submitcomm"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"

            android:layout_centerVertical="true"
            android:background="#bcfca9eb"
            android:text="ثبت" />


    </RelativeLayout>


</LinearLayout>
